#include <iostream>
#include <algorithm>    // For std::shuffle
#include <random>       // For std::random_device and std::mt19937
#include <vector>       // For std::vector
#include <string>       // For std::string


// should be placed under the customer information

 std::random_device rd;   // Seed for the random number generator
    std::mt19937 g(rd());    // Mersenne Twister engine for randomization
    std::shuffle(customers.begin(), customers.end(), g);

    // Use a visitor to manage the customers
    Visitor visitors(0, 8);

    for (Customer* customer : customers) {
        visitors.addCustomer(*customer);
    }
